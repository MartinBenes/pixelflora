{
  "name": "pixelflora",
  "version": "1.0.0",
  "description": "Procedural Plant Generator (Pixel Art)",
  "type": "module",
  "packageManager": "npm@10",
  "scripts": {
    "dev": "vite",
    "typecheck": "tsc --noEmit",
    "build": "npm run typecheck && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.md\" \"docs/**/*.md\" \".github/**/*.{md,yml,yaml}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.md\" \"docs/**/*.md\" \".github/**/*.{md,yml,yaml}\"",
    "check": "npm run format:check && npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "procedural-generation",
    "pixel-art",
    "typescript",
    "canvas",
    "plants"
  ],
  "author": "PixelFlora contributors",
  "license": "ISC",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
